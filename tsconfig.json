{
  "compilerOptions": {
    "target": "ES2021",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": ["node"],
    "moduleResolution": "Node",
  },
  "include": [
    "./src",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
